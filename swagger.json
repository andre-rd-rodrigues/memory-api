{
  "openapi": "3.0.0",
  "info": {
    "title": "Memory Game API",
    "description": "This is an experiment back-end service for a memory game.",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "API Support",
      "url": "http://www.swagger.io/support",
      "email": "support@swagger.io"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.1"
  },
  "servers": [
    { "url": "http://localhost:3000/api/", "description": "API local" }
  ],
  "paths": {
    "auth/register": {
      "post": {
        "summary": "Register a new user",
        "description": "User is registered and added to mongoDB",
        "tags": ["Auth"],
        "responses": {
          "200": {
            "description": "Registered successfully"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            }
          }
        }
      }
    },
    "auth/login": {
      "post": {
        "summary": "Login user",
        "description": "User login into the platform and gets access to his data",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          }
        }
      }
    },
    "user/:id/games/history": {
      "post": {
        "summary": "Add new game match",
        "description": "Adds new game match to user's database",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Game match added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Game_Match"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Game_Match"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Register": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "game": {
            "type": "object",
            "properties": {
              "history": {
                "type": "array",
                "properties": {
                  "moves": {
                    "type": "number"
                  },
                  "date": {
                    "type": "string"
                  },
                  "duration": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "secret_key": {
            "type": "string"
          }
        }
      },
      "Game_Match": {
        "type": "object",
        "properties": {
          "moves": {
            "type": "number"
          },
          "date": {
            "type": "string"
          },
          "duration": {
            "type": "number"
          }
        }
      },
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormart": "JWT"
        }
      }
    }
  }
}
